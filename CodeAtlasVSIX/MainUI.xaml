<DockPanel x:Class="CodeAtlasVSIX.MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAtlasVSIX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FF464646">
    <Menu x:Name="menu" Height="20" DockPanel.Dock="Top" Background="#FF3C3C3C">
        <MenuItem x:Name="OpenButton" Header="Open" Click="OpenButton_Click" Foreground="#FFCFCFCF"/>
        <MenuItem x:Name="TestButton" Header="Test" Foreground="#FFB9B9B9" Click="TestButton_Click"/>
    </Menu>
    <TabControl x:Name="tabControl" Margin="0" DockPanel.Dock="Bottom" Background="#FF8F8F8F" >
        <TabItem Header="Search">
            <Grid Background="#FFB7C3AC" MinHeight="10">
                <local:SearchWindow/>
            </Grid>
        </TabItem>
        <TabItem Header="Symbol">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem Header="Scheme">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>
    <local:CodeView/>
</DockPanel>
