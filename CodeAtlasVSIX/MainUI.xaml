<DockPanel x:Class="CodeAtlasVSIX.MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAtlasVSIX"
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.14.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="Auto" >

    <DockPanel.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </DockPanel.Resources>

    <Menu x:Name="menu" Height="20" DockPanel.Dock="Top" Style="{DynamicResource MenuStyle}">
        <MenuItem x:Name="OpenButton" Header="Open" Click="OpenButton_Click" Style="{DynamicResource MenuItemStyle}"/>
        <MenuItem x:Name="TestButton" Header="Test" Click="TestButton_Click" Style="{DynamicResource MenuItemStyle}"/>
        <MenuItem x:Name="CloseButton" Header="Close" Click="CloseButton_Click" Style="{DynamicResource MenuItemStyle}"/>
    </Menu>
    <TabControl x:Name="tabControl" Margin="0" DockPanel.Dock="Bottom" Background="#FF8F8F8F" >
        <TabItem Header="Search">
            <Grid Background="#FF666666" MinHeight="10">
                <local:SearchWindow x:Name="searchWindow"/>
            </Grid>
        </TabItem>
        <TabItem Header="Symbol">
            <Grid Background="#FF666666" MinHeight="10">
                <local:SymbolWindow x:Name="symbolWindow"/>
            </Grid>
        </TabItem>
        <TabItem Header="Scheme">
            <Grid Background="#FFE5E5E5" MinHeight="10">
            <local:SchemeWindow x:Name="schemeWindow"/>
            </Grid>
        </TabItem>
    </TabControl>
    <local:CodeView x:Name="codeView" />
</DockPanel>
