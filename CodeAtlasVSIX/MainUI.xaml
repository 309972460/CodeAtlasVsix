<UserControl x:Class="CodeAtlasVSIX.MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAtlasVSIX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <local:CodeView/>
        <TabControl x:Name="tabControl" Margin="0" VerticalAlignment="Bottom" >
            <TabItem Header="Search">
                <Grid Background="#FFB7C3AC" MinHeight="10"/>
            </TabItem>
            <TabItem Header="Symbol">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <ToolBar x:Name="toolBar" VerticalAlignment="Top" Height="38" Background="#FFB4B4B4" />
    </Grid>
</UserControl>
