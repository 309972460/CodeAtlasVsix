<Canvas x:Class="CodeAtlasVSIX.CodeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CodeAtlasVSIX"
        mc:Ignorable="d" 
        x:Name="background" Background="#FF514947" Margin="0" MouseWheel="canvas_MouseWheel" ClipToBounds="True" MouseDown="background_MouseDown" MouseEnter="background_MouseEnter" MouseLeave="background_MouseLeave">
    <Canvas x:Name="canvas">
        <Canvas.RenderTransform>
            <MatrixTransform/>
        </Canvas.RenderTransform>
        <Button x:Name="testButton" Content="Test" Canvas.Left="9" Canvas.Top="6" Width="75" Click="testButton_Click"/>
    </Canvas>
    <local:Legend x:Name="legend" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0"/>
    <local:Scheme x:Name ="scheme" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0"/>
</Canvas>
