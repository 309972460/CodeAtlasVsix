<UserControl x:Class="CodeAtlasVSIX.SearchWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAtlasVSIX"
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.14.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="42" Width="Auto" MinWidth="42"/>
            <ColumnDefinition FrameworkElement.FlowDirection="RightToLeft" Width="5*"/>
            <ColumnDefinition Width="Auto" MaxWidth="40" MinWidth="40"/>
            <ColumnDefinition FrameworkElement.FlowDirection="RightToLeft" Width="5*"/>
        </Grid.ColumnDefinitions>
        <!--Style="{StaticResource ResourceKey={x:Static vsfx:VsResourceKeys.TextBoxStyleKey}}"-->
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Right" Margin="-2,0,0,0" Style="{DynamicResource LabelStyle}" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" Padding="5,4.7,5,5" FontSize="10"/>
        <TextBox x:Name="nameEdit" Margin="0" TextWrapping="Wrap" Grid.Column="1" MinWidth="40" Style="{StaticResource TextBoxStyle}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" KeyDown="nameEdit_KeyDown"/>
        <Label x:Name="label1" Content="Type" Margin="0" Grid.Column="2" HorizontalAlignment="Right" FontSize="10" Style="{DynamicResource LabelStyle}"/>
        <TextBox x:Name="typeEdit" Margin="0" TextWrapping="Wrap" Grid.Column="3" Style="{StaticResource TextBoxStyle}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" KeyDown="typeEdit_KeyDown"/>
        <Label x:Name="label2" Content="File" HorizontalAlignment="Right" Margin="0" Grid.Row="1" FontSize="10" Style="{DynamicResource LabelStyle}"/>
        <TextBox x:Name="fileEdit" Margin="0" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBoxStyle}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" KeyDown="fileEdit_KeyDown"/>
        <Label x:Name="label3" Content="Line" HorizontalAlignment="Right" Margin="0" Grid.Column="2" Grid.Row="1" FontSize="10" Style="{DynamicResource LabelStyle}"/>
        <TextBox x:Name="lineEdit" TextWrapping="Wrap" Grid.Column="3" Grid.Row="1" Style="{StaticResource TextBoxStyle}" KeyDown="lineEdit_KeyDown" PreviewKeyDown="lineEdit_PreviewKeyDown" PreviewTextInput="lineEdit_PreviewTextInput" />
        <Button x:Name="searchButton" Content="Search" Grid.Row="2" Grid.ColumnSpan="2" Click="searchButton_Click" Style="{DynamicResource ButtonStyle}"/>
        <Button x:Name="addToSceneButton" Content="Add To Scene" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Click="addToSceneButton_Click" HorizontalContentAlignment="Center" Style="{DynamicResource ButtonStyle}"/>
        <ListBox x:Name="resultList" Margin="0" Grid.Row="3" Grid.ColumnSpan="4" MinHeight="100" MaxHeight="250" Style="{StaticResource ListBoxStyle}"/>

    </Grid>
</UserControl>
